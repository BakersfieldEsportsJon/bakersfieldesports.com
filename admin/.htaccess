# Prevent access to sensitive files
<FilesMatch "\.(env|config|htaccess)$">
    Require all denied
</FilesMatch>

# Allow access to PHP files in admin directory
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>

# Allow access to specific files
<FilesMatch "^(index|login|logout|dashboard)\.php$">
    Require all granted
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; font-src 'self'; frame-ancestors 'none'; form-action 'self'; base-uri 'self';"
    
    # Prevent clickjacking
    Header always set X-Frame-Options "DENY"
    
    # Enable HSTS with 1 year duration and include subdomains
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
</IfModule>

# Restrict access to sensitive directories
<FilesMatch "^(includes|logs|sessions)">
    Require all denied
</FilesMatch>

# Disable directory listing
Options -Indexes

# Prevent access to hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Error documents
ErrorDocument 403 /admin/403.shtml
ErrorDocument 404 /admin/404.shtml
ErrorDocument 500 /admin/500.shtml
